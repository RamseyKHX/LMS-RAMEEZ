@page "/teachers"

<h3>Teachers' Information</h3>

@if (teachers.Any())
{
    foreach (var teacher in teachers)
    {
        <div>
            <h4>@teacher.Name</h4>
            <p>Email: @teacher.Email</p>
            <p>Average Rating: @teacher.AverageRating</p>
            <h5>Teaching History</h5>
            @if (teacher.TeachingHistory.Any())
            {
                <ul>
                    @foreach (var assignment in teacher.TeachingHistory)
                    {
                        <li>@assignment.CourseName - @assignment.Year (@assignment.Semester)</li>
                    }
                </ul>
            }
            else
            {
                <p>No teaching history available.</p>
            }
        </div>
    }
}
else
{
    <p>No teachers available.</p>
}

